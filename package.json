{
    "name": "@ovchinnikov-lxs/n3-workspace",
    "type": "module",
    "version": "0.0.2",
    "private": true,
    "description": "A mono-repository for all my projects and utilities on Nuxt",
    "author": "ovchinnikov-lxs",
    "license": "ISC",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ovchinnikov-lxs/n3-workspace.git"
    },
    "main": "index.js",
    "engines": {
        "node": ">=20.10.0"
    },
    "scripts": {
        "cleanup": "rimraf 'packages/**/node_modules' 'playground/node_modules' 'node_modules'",
        "lint": "eslint . --cache",
        "lint:fix": "eslint . --cache --fix",
        "typecheck": "tsc --noEmit",
        "prepare": "husky"
    },
    "workspaces": [
        "packages/*"
    ],
    "devDependencies": {
        "@antfu/eslint-config": "^2.20.0",
        "eslint": "^9.4.0",
        "eslint-config-prettier": "^9.1.0",
        "husky": "^9.0.11",
        "lint-staged": "^15.2.5",
        "prettier": "^3.3.0",
        "prettier-plugin-multiline-arrays": "^3.0.6",
        "rimraf": "^5.0.7",
        "stylelint": "^16.6.0",
        "stylelint-config-recess-order": "^5.0.1",
        "stylelint-config-recommended-scss": "^14.0.0",
        "stylelint-config-recommended-vue": "^1.5.0",
        "stylelint-config-standard-scss": "^13.1.0",
        "stylelint-scss": "^6.3.0",
        "typescript": "^5.4.5",
        "vue-tsc": "^2.0.19"
    },
    "lint-staged": {
        "*.{css,vue,scss,js,ts,vue,json,md,html}": "prettier --write",
        "*.{css,vue,scss}": "stylelint --fix",
        "*.{js,ts,vue,json}": "eslint --fix"
    }
}
